<li class="dropdown user user-menu">
    <!-- Menu Toggle Button -->
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <!-- The user image in the navbar-->
        <img src="{{ app.user.facebookPhoto }}" class="user-image" alt="User Image">
        <!-- hidden-xs hides the username on small devices so only the image appears. -->
        <span class="hidden-xs">{{ app.user.name }}</span>
    </a>
    <ul class="dropdown-menu">
        <!-- The user image in the menu -->
        <li class="user-header">
            <img src="{{ app.user.facebookPhoto }}" class="img-circle" alt="User Image">

            <p>
                {{ app.user.name }}
            </p>
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            {#<div class="pull-left">
                <a href="#" class="btn btn-default btn-flat">Profile</a>
            </div>#}
            <div class="pull-right">
                <a href="{{ path('security_logout') }}" class="btn btn-default btn-flat">Sign out</a>
            </div>
        </li>
    </ul>
</li>