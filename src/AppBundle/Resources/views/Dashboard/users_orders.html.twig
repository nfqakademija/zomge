{% extends "@App/Dashboard/base.html.twig" %}

{% block avanzu_page_title %}Orders{% endblock %}
{% block avanzu_page_subtitle %}View {{ user.name }} orders{% endblock %}

{% block avanzu_page_content %}

    <div class="box">
        <div class="box-body">
            {% if orders is empty %}
                <div class="alert alert-info" role="alert">
                    This user hasn't made any orders yet.
                </div>
            {% else %}
                {% include 'AppBundle:Dashboard:_orders_list.html.twig' %}
            {% endif %}
        </div>
    </div>

{% endblock %}