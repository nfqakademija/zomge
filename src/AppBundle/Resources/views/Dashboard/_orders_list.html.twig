<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Order No</th>
        <th>Created at</th>
        <th>Status</th>
        <th>Payment state</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for order in orders %}
        <tr>
            <td>{{ order.id }}</td>
            <td>{{ order.orderNumber }}</td>
            <td>{{ order.createdAt|date('Y-m-d') }}</td>
            <td>{{ order.readableStatus }}</td>
            <td>{{ order.readableIsPaid }}</td>
            <td><a href="{{ path('admin_orders_view', {'id': order.id}) }}" class="btn btn-default">View</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(orders) }}
</div>