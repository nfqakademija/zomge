{% extends "@App/Dashboard/base.html.twig" %}

{% block avanzu_page_title %}Users{% endblock %}

{% block avanzu_page_content %}
    {{ parent() }}

    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Registered</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.createdAt|date('Y-m-d') }}</td>
                                <td>
                                    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-default">Edit</a>
                                    <a href="{{ path('admin_users_orders', {'id': user.id}) }}" class="btn btn-primary">Orders</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <div class="navigation">
                        {{ knp_pagination_render(users) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}